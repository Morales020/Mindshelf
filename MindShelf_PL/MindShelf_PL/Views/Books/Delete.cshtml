@model MindShelf_BL.Dtos.BookDto.BookResponseDto

@{
    ViewData["Title"] = "حذف الكتاب";
    ViewBag.BodyClass = "delete-page";
}

<div class="container py-5">
    <!-- Warning Header -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-danger text-center mb-4" role="alert">
                <h2 class="alert-heading mb-3">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    تحذير: حذف الكتاب
                </h2>
                <p class="mb-0 fs-5">هل أنت متأكد أنك تريد حذف هذا الكتاب نهائياً؟</p>
                <hr>
                <p class="mb-0 text-muted">هذا الإجراء لا يمكن التراجع عنه!</p>
            </div>
        </div>
    </div>

    <!-- Success Message Display -->
    @if (TempData["Success"] != null)
    {
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div>
                            <h4 class="alert-heading mb-2">✅ تم بنجاح!</h4>
                            <p class="mb-0">@TempData["Success"]</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Book Details Card -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-danger" style="border-radius: 20px; border-width: 3px;">
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Book Image -->
                        <div class="col-md-4 text-center">
                            <div class="book-image-container">
                                <img src="@Model.ImageUrl" alt="@Model.Title" 
                                     class="img-fluid rounded-3 shadow" 
                                     style="max-height: 400px; width: 100%; object-fit: contain;" />
                            </div>
                        </div>

                        <!-- Book Information -->
                        <div class="col-md-8">
                            <div class="book-info">
                                <h1 class="book-title mb-3 text-danger">📚 @Model.Title</h1>
                                
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="info-item mb-2">
                                            <i class="fas fa-user-edit text-primary me-3"></i>
                                            <strong>المؤلف:</strong> @Model.AuthorName
                                        </div>
                                        <div class="info-item mb-2">
                                            <i class="fas fa-list text-primary me-3"></i>
                                            <strong>الفئة:</strong> @Model.CategoryName
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-item mb-2">
                                            <i class="fas fa-calendar text-primary me-3"></i>
                                            <strong>تاريخ النشر:</strong> @Model.PublishedDate.ToString("dd/MM/yyyy")
                                        </div>
                                        <div class="info-item mb-2">
                                            <i class="fas fa-tag text-primary me-3"></i>
                                            <strong>السعر:</strong> <span class="price">@Model.Price.ToString("C")</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="rating-section mb-3">
                                    <div class="rating-stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Model.Rating)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-warning"></i>
                                            }
                                        }
                                        <span class="ms-2 text-muted">(@Model.Rating.ToString("F1"))</span>
                                    </div>
                                    <small class="text-muted">@Model.ReviewCount مراجعة</small>
                                </div>

                                <div class="description-section mb-4">
                                    <h5 class="text-dark mb-2">
                                        <i class="fas fa-align-right text-primary me-2"></i>
                                        الوصف
                                    </h5>
                                    <p class="description-text">@Model.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row justify-content-center mt-4">
        <div class="col-lg-8 text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="BookId" />
                <button type="submit" class="btn btn-danger btn-lg me-3">
                    <i class="fas fa-trash me-2"></i>
                    تأكيد الحذف نهائياً
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-right me-2"></i>
                إلغاء والعودة للكتب
            </a>
        </div>
    </div>
</div>

<style>
    /* Delete Page Styles */
    .delete-page {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
        min-height: 100vh;
    }

    .book-title {
        color: #dc3545;
        font-weight: 700;
        font-size: 2.5rem;
        line-height: 1.2;
    }

    .info-item {
        font-size: 1.1rem;
        color: #495057;
    }

    .price {
        color: #28a745;
        font-weight: 600;
        font-size: 1.2rem;
    }

    .rating-stars {
        font-size: 1.5rem;
    }

    .description-text {
        color: #6c757d;
        line-height: 1.6;
        font-size: 1rem;
    }

    .book-image-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 400px;
        background: #f8f9fa;
        border-radius: 15px;
        padding: 1rem;
    }

    .book-image-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .alert-danger {
        border-radius: 15px;
        border: none;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
    }

    .btn-danger {
        border-radius: 10px;
        font-weight: 600;
        padding: 12px 30px;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
    }

    .btn-secondary {
        border-radius: 10px;
        font-weight: 600;
        padding: 12px 30px;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        transform: translateY(-2px);
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }

    @@media (max-width: 768px) {
        .book-title {
            font-size: 2rem;
        }
        
        .btn-lg {
            padding: 10px 20px;
            font-size: 1rem;
        }
        
        .book-image-container {
            min-height: 300px;
        }
    }
</style>
