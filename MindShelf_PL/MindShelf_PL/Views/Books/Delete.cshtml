@model MindShelf_BL.Dtos.BookDto.BookResponseDto

@{
    ViewData["Title"] = "حذف الكتاب";
}

<h2 class="text-danger">هل أنت متأكد أنك تريد حذف هذا الكتاب؟</h2>

<div class="card shadow p-3 mt-3">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-8">
            <h4>@Model.Title</h4>
            <p><strong>الوصف:</strong> @Model.Description</p>
            <p><strong>السعر:</strong> @Model.Price.ToString("C")</p>
            <p><strong>تاريخ النشر:</strong> @Model.PublishedDate.ToShortDateString()</p>
            <p><strong>التقييم:</strong> @Model.Rating ⭐</p>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="BookId" />

    <button type="submit" class="btn btn-danger">
         <i class="bi bi-trash"></i> تأكيد الحذف
    </button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
