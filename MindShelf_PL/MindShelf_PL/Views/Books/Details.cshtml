@model MindShelf_BL.Dtos.BookDto.BookResponseDto

@{
    ViewData["Title"] = "تفاصيل الكتاب";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-purple" style="font-size: 2rem; color: #6f42c1;">
        تفاصيل الكتاب
    </h2>

    <div class="card p-4 shadow-lg" style="max-width: 800px; margin: 0 auto; border: 2px solid #6f42c1; border-radius: 15px;">
        <div class="row">
            <!-- Image -->
            <div class="col-md-4 text-center">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" style="max-height: 300px;" />
            </div>

            <!-- Book Info -->
            <div class="col-md-8">
                <h3 class="fw-bold">@Model.Title</h3>
                <p class="text-muted mb-1"><strong>المؤلف:</strong> @Model.AuthorName</p>
                <p class="text-muted mb-1"><strong>الفئة:</strong> @Model.CategoryName</p>
                <p class="text-muted mb-1"><strong>تاريخ النشر:</strong> @Model.PublishedDate.ToString("")</p>
                <p class="text-muted mb-1"><strong>السعر:</strong> @Model.Price.ToString("C")</p>
                <p class="text-muted mb-1"><strong>الحالة:</strong> @Model.State</p>
                <p class="text-muted mb-1"><strong>المخزون:</strong> @Model.State.ToString()</p>
                <p class="text-muted mb-1"><strong>عدد المراجعات:</strong> @Model.ReviewCount</p>
                <p class="text-muted mb-3"><strong>التقييم:</strong> @Model.Rating.ToString("0.0") / 5</p>

                <hr />

                <h5>الوصف:</h5>
                <p>@Model.Description</p>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-purple me-2">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger me-1">حذف</a>
                    <a asp-action="Index" class="btn btn-secondary">رجوع</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-purple {
        background-color: #6f42c1;
        border-color: #6f42c1;
        color: white;
        transition: all 0.3s;
    }

        .btn-purple:hover {
            background-color: #5a2e9c;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        transition: all 0.3s;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }
</style>
