@model MindShelf_BL.Dtos.OrderDtos.OrderResponseDto
@using MindShelf_DAL.Models
@{
    ViewData["Title"] = "حذف الطلب";
}

<style>
    /* Dark Mode Styles for Delete Page */
    body.dark-mode .alert-warning {
        background-color: #664d03;
        border-color: #997404;
        color: #fff3cd;
    }

    body.dark-mode .alert-warning h5 {
        color: #fff3cd;
    }

    body.dark-mode .card {
        background-color: var(--dark-card-bg);
        border-color: var(--dark-border-color);
    }

    body.dark-mode .card-body {
        color: var(--dark-text-primary);
    }

    body.dark-mode dt {
        color: var(--dark-text-primary);
        font-weight: 600;
    }

    body.dark-mode dd {
        color: #b0b0b0;
    }

    body.dark-mode .fw-bold {
        color: var(--dark-text-primary);
    }

    body.dark-mode .text-danger {
        color: #ff6b6b !important;
    }

    body.dark-mode .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    body.dark-mode .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    body.dark-mode .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

    body.dark-mode .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger"><i class="fas fa-trash-alt me-2"></i>حذف الطلب</h2>
</div>

<div class="alert alert-warning">
    <h5><i class="fas fa-exclamation-triangle me-2"></i>تأكيد الحذف</h5>
    <p>هل أنت متأكد أنك تريد حذف هذا الطلب بشكل نهائي؟</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">رقم الطلب</dt>
            <dd class="col-sm-9">#@Model.Id.ToString().PadLeft(6, '0')</dd>

            <dt class="col-sm-3">العميل</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">التاريخ</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">الإجمالي</dt>
            <dd class="col-sm-9 fw-bold">@Model.TotalAmount.ToString("C")</dd>

            <dt class="col-sm-3">الحالة</dt>
            <dd class="col-sm-9">
                <span class="badge @GetStatusBadgeClass(Model.OrderStatus)">
                    @GetStatusText(Model.OrderStatus)
                </span>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-1"></i> حذف
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="fas fa-undo me-1"></i> إلغاء
    </a>
</form>

@functions {
    string GetStatusBadgeClass(OrderState status) => status switch
    {
        OrderState.Pending => "bg-warning",
        OrderState.Confirmed => "bg-info",
        OrderState.Shipping => "bg-primary",
        OrderState.Delivered => "bg-success",
        OrderState.Cancelled => "bg-danger",
        OrderState.Processing => "bg-secondary",
        OrderState.Returned => "bg-dark",
        _ => "bg-secondary"
    };

    string GetStatusText(OrderState status) => status switch
    {
        OrderState.Pending => "موقوف",
        OrderState.Confirmed => "مؤكد",
        OrderState.Shipping => "تم الشحن",
        OrderState.Delivered => "تم التسليم",
        OrderState.Cancelled => "ملغي",
        OrderState.Returned => "أرجاع",
        OrderState.Processing => "في الانتظار",
        _ => status.ToString()
    };
    }
}
