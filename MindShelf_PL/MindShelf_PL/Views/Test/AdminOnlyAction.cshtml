@{
    ViewData["Title"] = "صفحة الإدارة";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="text-danger mb-4">
                        <i class="fas fa-crown"></i>
                        صفحة الإدارة
                    </h2>
                    <p class="lead">هذه صفحة خاصة بالإدارة وتتطلب صلاحيات إدارية.</p>
                    <p>مرحباً <strong>@User.Identity.Name</strong>!</p>
                    <div class="mt-4">
                        <a href="@Url.Action("ProtectedAction", "Test")" class="btn btn-warning me-2">
                            <i class="fas fa-lock me-2"></i>
                            صفحة محمية
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            الصفحة الرئيسية
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
