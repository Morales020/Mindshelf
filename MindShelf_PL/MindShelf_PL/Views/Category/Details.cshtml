@model CategoryDetailsDto

@{
    ViewData["Title"] = "تفاصيل الفئه";
}

<div class="container mt-5">

    <div class="card p-4 shadow-lg" style="max-width: 1000px; margin: 0 auto; border: 1px solid #9e512b; border-radius: 15px;">
        <div class="row">
            <!-- Category Info -->
            <div>
                <h3 style="font-family: fantasy;text-align:center; font-weight:100;color:black;font-size:40px;">
                    @Model.Name
                </h3>
				<hr />
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                    @foreach (var book in Model.Books)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm book-card">
                                <!-- ✅ صورة الكتاب -->
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId">
                                <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height:250px; object-fit:cover;" />
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@book.Title</h5>
                                    <p class="card-text text-muted">👤 @book.Author.Name</p>

                                    <div class="mb-2">
                                        <span class="text-warning">⭐ @book.Rating</span>
                                        <span class="text-muted">(@book.ReviewCount مراجعة)</span>
                                    </div>

                                    <p class="fw-bold text-success">س.ر @book.Price</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (Model.Books == null || !Model.Books.Any())
                {
                    <div style="padding:15px;">
                        <p style="text-align:center;position:relative;top: 20px;">📚 لا توجد كتب في هذه الفئة.</p>
                    </div>
                }
                <hr />
                <div class="description-section">
	                <h6>Description:</h6>
	                <p>@Model.Description</p>
                </div>

                <div class=" d-flex gap-1 text-center btn-group-sm mt-4 justify-content-center">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i> رجوع
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Edit", new { id = Model.CategoryId })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit me-1"></i> تعديل
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.CategoryId })" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash me-1"></i> حذف
                        </a>
                    }
                </div>
 
            </div>
        </div>
    </div>
</div>

<style>
    /* Import a modern, clean font that supports Arabic */
    @@import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@400;700&display=swap');
    /* --- CSS Variables for consistent styling --- */
    :root {
        --secondary-color: #6c757d; /* Gray */
        --accent-color: #28a745; /* Green for success/price */
        --bg-color-light: #f8f9fa;
        --text-color-light: #333;
        --card-bg-light: #ffffff;
        --card-border-light: #e9ecef;
        --shadow-color-light: rgba(0, 0, 0, 0.1);
        --transition-duration: 0.3s;
    }

    h3 {
	    font-family: 'Tajawal', sans-serif; /* Use the new font */
	    font-weight: 700; /* Bolder for impact */
	    text-align: center;
	    font-size: 2.5rem; /* Larger font size */
	    margin-bottom: 0.5rem; /* Reduce the bottom margin */
	    color: var(--text-color-light) !important;
	    text-transform: uppercase; /* Make the text uppercase */
	    letter-spacing: 2px; /* Add spacing between letters */
    }

    body.dark-mode {
        --bg-color-light: #212529;
        --text-color-light: #f8f9fa;
        --card-bg-light: #343a40;
        --card-border-light: #495057;
        --shadow-color-light: rgba(0, 0, 0, 0.3);
    }

    /* --- General Body & Typography --- */
    body {
        font-family: 'Tajawal', sans-serif;
        background-color: var(--bg-color-light);
        color: var(--text-color-light);
        transition: background-color var(--transition-duration), color var(--transition-duration);
    }

    h3 {
        font-weight: 700;
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--text-color-light) !important;
    }

    /* --- Main Container Card --- */
    .card.shadow-lg {
        background-color: var(--card-bg-light);
        border: 1px solid var(--card-border-light) !important;
        border-radius: 15px;
        box-shadow: 0 10px 25px var(--shadow-color-light);
        transition: all var(--transition-duration);
    }

    /* --- Book Card Styling --- */
    .book-card {
        background-color: var(--card-bg-light);
        border-color: var(--card-border-light);
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px var(--shadow-color-light);
        }

    .card-title {
        color: var(--text-color-light);
        font-weight: 700;
    }

    .card-text.text-muted {
        color: var(--text-color-light) !important; /* Adjust muted color for dark mode */
    }

    .text-success {
        color: var(--accent-color) !important;
    }

    /* --- Description Section --- */
    .description-section {
        background-color: var(--bg-color-light); /* Use theme-based color */
        padding: 1.5rem;
        border-radius: 10px;
        margin-top: 1.5rem;
        border: 1px solid var(--card-border-light);
        transition: all var(--transition-duration);
    }

        .description-section h6 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-color-light);
            margin-bottom: 0.75rem;
            border-bottom: 2px solid var(--primary-color);
            display: inline-block;
            padding-bottom: 0.25rem;
        }

        .description-section p {
            font-size: 1rem;
            line-height: 1.6;
            color: var(--text-color-light);
        }

</style>
