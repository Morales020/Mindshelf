@model IEnumerable<CategoryResponseDto>

<div class="card shadow border-0 mt-4" id="Original">
	<div class="card-header bg-gradient ml-0 py-3" style="background-color:rgba(22, 34, 57, 0.95);">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-light" style="font-family:system-ui;">Categories</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-4">
			<div class="col-6"></div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn" style="color:white;background-color:#213b56;font-size:15px">
					<i class="bi bi-plus-circle"></i> Create
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Category Name</th>
					<th>Books</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>
							@if (item.Books != null && item.Books.Any())
							{
								<ul>
									@foreach (var book in item.Books)
									{
										<li>@book.Title</li>
									}
								</ul>
							}
							else
							{
								<span>No books</span>
							}
						</td>
						<td style="width:200px;">
							<a asp-controller="Category" asp-action="Details" asp-route-id="@item.CategoryId" class="btn rounded-1" style="color:white;background-color:#213b56;">
								<i class="bi bi-pencil-square"></i> Details
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
