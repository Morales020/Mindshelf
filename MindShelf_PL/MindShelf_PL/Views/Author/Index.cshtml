
@model IEnumerable<MindShelf_BL.Dtos.AuthorDto.AuthorResponseDto>

@{
    ViewData["Title"] = "Authors";
}

<style>
    /* Author-specific styles */
    
    /* Remove all underlines from author name links */
    .author-name a, .author-name a:hover, .author-name a:focus, .author-name a:visited,
    .dark-mode .author-name a, .dark-mode .author-name a:hover, .dark-mode .author-name a:focus, .dark-mode .author-name a:visited {
        text-decoration: none !important;
    }
    .author-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        transition: var(--transition);
        border: 1px solid #e9ecef;
        overflow: hidden;
    }

    .author-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .author-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid var(--primary-beige);
    }

    .author-name {
        color: var(--primary-blue);
        font-family: var(--font-arabic-title);
        font-weight: 700;
        text-decoration: none !important;
        transition: var(--transition);
    }
    
    .author-name a {
        text-decoration: none !important;
        color: inherit;
    }
    
    .author-name a:hover {
        text-decoration: none !important;
        color: inherit;
    }

    .author-name:hover {
        color: var(--primary-brown);
    }

    .author-bio {
        color: #6c757d;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .author-date {
        color: var(--primary-brown);
        font-size: 0.85rem;
    }

    .author-actions .btn {
        border-radius: var(--border-radius);
        font-size: 0.85rem;
        padding: 0.375rem 0.75rem;
        transition: var(--transition);
    }

    .btn-edit {
        background-color: var(--warning-color);
        border-color: var(--warning-color);
        color: white;
    }

    .btn-edit:hover {
        background-color: #e0a800;
        border-color: #d39e00;
        transform: translateY(-1px);
    }

    .btn-delete {
        background-color: var(--danger-color);
        border-color: var(--danger-color);
        color: white;
    }

    .btn-delete:hover {
        background-color: #c82333;
        border-color: #bd2130;
        transform: translateY(-1px);
    }

    .btn-add-author {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-brown));
        border: none;
        color: white;
        border-radius: var(--border-radius);
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: var(--transition);
        box-shadow: var(--box-shadow);
    }

    .btn-add-author:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.2);
    }

    /* Dark mode styles */
    .dark-mode .author-card {
        background: #2d3748;
        border-color: #4a5568;
        color: #e2e8f0;
    }

    .dark-mode .author-name {
        color: #63b3ed;
        text-decoration: none !important;
    }
    
    .dark-mode .author-name a {
        text-decoration: none !important;
        color: inherit;
    }
    
    .dark-mode .author-name a:hover {
        text-decoration: none !important;
        color: inherit;
    }

    .dark-mode .author-name:hover {
        color: #90cdf4;
        text-decoration: none !important;
    }

    .dark-mode .author-bio {
        color: #a0aec0;
    }

    .dark-mode .author-date {
        color: #f6ad55;
    }
</style>

<div class="container py-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-primary mb-2">
                        <i class="fas fa-users me-3"></i>قائمة المؤلفين
                    </h1>
                    <p class="text-muted mb-0">استكشف مجموعة متنوعة من المؤلفين المتميزين</p>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn-add-author">
                        <i class="fas fa-plus me-2"></i>إضافة مؤلف جديد
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Authors Grid -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var author in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="author-card h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start mb-3">
                                        @if (!string.IsNullOrEmpty(author.ImageUrl) && (author.ImageUrl.EndsWith("jpg", StringComparison.OrdinalIgnoreCase) || author.ImageUrl.EndsWith("jpeg", StringComparison.OrdinalIgnoreCase) || author.ImageUrl.EndsWith("png", StringComparison.OrdinalIgnoreCase) || author.ImageUrl.EndsWith("gif", StringComparison.OrdinalIgnoreCase) || author.ImageUrl.EndsWith("webp", StringComparison.OrdinalIgnoreCase)))
                                        {
                                            <img src="@author.ImageUrl" alt="@author.Name" class="author-image me-3" />
                                        }
                                        else
                                        {
                                            <img src="/Images/anon-icon.jpg" alt="@author.Name" class="author-image me-3" />
                                        }
                                <div class="flex-grow-1">
                                    <h5 class="author-name mb-2">
                                        <a asp-action="Details" asp-route-id="@author.AuthorId">@author.Name</a>
                                    </h5>
                                    <p class="author-date mb-0">
                                        <i class="fas fa-calendar-alt me-1"></i>
                                        @(author.DateOfBirth?.ToString("yyyy-MM-dd") ?? "غير محدد")
                                    </p>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(author.Bio))
                            {
                                <p class="author-bio mb-3">@author.Bio</p>
                            }
                            
                            <div class="author-actions d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@author.AuthorId" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    <i class="fas fa-eye me-1"></i>عرض التفاصيل
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-edit btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                }
                                @if (User.IsInRole("Admin"))
                                {

                                    <a asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-delete btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="text-muted mb-3">لا توجد مؤلفين متاحين</h4>
                    <p class="text-muted mb-4">ابدأ بإضافة مؤلف جديد لبناء مكتبتك</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" class="btn-add-author">
                            <i class="fas fa-plus me-2"></i>إضافة أول مؤلف
                        </a>
                    }
                </div>
            </div>
        }
    </div>
    </div>

<script>
    // Force remove underlines from all buttons on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Remove underlines from add author button
        const addAuthorBtn = document.querySelector('.btn-add-author');
        if (addAuthorBtn) {
            addAuthorBtn.style.textDecoration = 'none';
            addAuthorBtn.style.borderBottom = 'none';
            addAuthorBtn.style.boxShadow = 'none';
            
            // Remove underlines from all child elements
            const childElements = addAuthorBtn.querySelectorAll('*');
            childElements.forEach(element => {
                element.style.textDecoration = 'none';
            });
            
            // Add event listeners to maintain no underlines
            addAuthorBtn.addEventListener('mouseenter', function() {
                this.style.textDecoration = 'none';
            });
            addAuthorBtn.addEventListener('mouseleave', function() {
                this.style.textDecoration = 'none';
            });
            addAuthorBtn.addEventListener('focus', function() {
                this.style.textDecoration = 'none';
            });
        }
        
        // Remove underlines from all author name links
        const authorNameLinks = document.querySelectorAll('.author-name a');
        authorNameLinks.forEach(link => {
            link.style.textDecoration = 'none';
            link.addEventListener('mouseenter', function() {
                this.style.textDecoration = 'none';
            });
            link.addEventListener('mouseleave', function() {
                this.style.textDecoration = 'none';
            });
        });
        
        // Remove underlines from all action buttons
        const actionButtons = document.querySelectorAll('.author-actions a');
        actionButtons.forEach(button => {
            button.style.textDecoration = 'none';
            button.addEventListener('mouseenter', function() {
                this.style.textDecoration = 'none';
            });
            button.addEventListener('mouseleave', function() {
                this.style.textDecoration = 'none';
            });
        });
    });
</script>
