@model MindShelf_BL.Dtos.AuthorDto.AuthorCreateDto

@{
    ViewData["Title"] = "إضافة مؤلف";
}

<style>
    /* Author Form specific styles */
    
    /* Remove all underlines from buttons and links */
    .btn-save, .btn-cancel, a.btn-save, a.btn-cancel, button.btn-save, button.btn-cancel,
    .btn-save:hover, .btn-cancel:hover, a.btn-save:hover, a.btn-cancel:hover, 
    button.btn-save:hover, button.btn-cancel:hover {
        text-decoration: none !important;
    }
    
    /* Ensure button text colors are visible */
    .btn-save, .btn-cancel, a.btn-save, a.btn-cancel, button.btn-save, button.btn-cancel {
        color: white !important;
    }
    
    .btn-save:hover, .btn-cancel:hover, a.btn-save:hover, a.btn-cancel:hover, 
    button.btn-save:hover, button.btn-cancel:hover {
        color: white !important;
    }
    .author-form-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        transition: var(--transition);
        border: 1px solid #e9ecef;
        overflow: hidden;
    }

    .author-form-header {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-brown));
        color: white;
        padding: 1.5rem;
        border-radius: var(--border-radius) var(--border-radius) 0 0;
    }

    .author-form-header h4 {
        margin: 0;
        font-family: var(--font-arabic-title);
        font-weight: 700;
    }

    .fancy-input {
        border: 2px solid #e9ecef;
        border-radius: var(--border-radius);
        transition: var(--transition);
        padding: 0.75rem 1rem;
        background-color: #fff;
        font-family: var(--font-arabic);
    }

    .fancy-input:focus {
        border-color: var(--primary-blue) !important;
        box-shadow: 0 0 0 0.25rem rgba(30, 58, 138, 0.15);
        outline: none;
    }

    .preview-wrapper {
        min-height: 120px;
        border: 2px dashed #e9ecef;
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        background: var(--light-beige);
        transition: var(--transition);
    }

    .preview-wrapper:hover {
        border-color: var(--primary-blue);
    }

    #authorPreview {
        max-height: 180px;
        object-fit: cover;
        border-radius: var(--border-radius);
    }

    .btn-save {
        background: linear-gradient(135deg, var(--primary-blue), var(--primary-brown));
        border: none;
        color: white !important;
        border-radius: var(--border-radius);
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: var(--transition);
        box-shadow: var(--box-shadow);
        text-decoration: none !important;
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.2);
        color: white !important;
        text-decoration: none !important;
    }

    .btn-cancel {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white !important;
        border-radius: var(--border-radius);
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: var(--transition);
        text-decoration: none !important;
    }

    .btn-cancel:hover {
        background-color: #5a6268;
        border-color: #545b62;
        transform: translateY(-1px);
        color: white !important;
        text-decoration: none !important;
    }

    /* Dark mode styles */
    .dark-mode .author-form-card {
        background: #2d3748;
        border-color: #4a5568;
        color: #e2e8f0;
    }

    .dark-mode .fancy-input {
        background-color: #4a5568;
        border-color: #4a5568;
        color: #e2e8f0;
    }

    .dark-mode .fancy-input:focus {
        border-color: #63b3ed !important;
        background-color: #4a5568;
    }

    .dark-mode .preview-wrapper {
        background: #4a5568;
        border-color: #4a5568;
    }

    .dark-mode .preview-wrapper:hover {
        border-color: #63b3ed;
    }
    
    /* Dark mode button styles */
    .dark-mode .btn-save, .dark-mode .btn-cancel,
    .dark-mode a.btn-save, .dark-mode a.btn-cancel,
    .dark-mode button.btn-save, .dark-mode button.btn-cancel {
        color: white !important;
        text-decoration: none !important;
    }
    
    .dark-mode .btn-save:hover, .dark-mode .btn-cancel:hover,
    .dark-mode a.btn-save:hover, .dark-mode a.btn-cancel:hover,
    .dark-mode button.btn-save:hover, .dark-mode button.btn-cancel:hover {
        color: white !important;
        text-decoration: none !important;
    }
</style>

<div class="container py-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <a asp-action="Index" class="btn-cancel me-3">
                    <i class="fas fa-arrow-right me-2"></i>رجوع للقائمة
                </a>
                <h1 class="display-6 fw-bold text-primary mb-0">
                    <i class="fas fa-user-plus me-3"></i>إضافة مؤلف جديد
                </h1>
            </div>
        </div>
    </div>

    <!-- Author Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="author-form-card">
                <div class="author-form-header">
                    <h4><i class="fas fa-user-plus me-2"></i>بيانات المؤلف الجديد</h4>
                </div>

                <div class="card-body p-4">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                    <form asp-action="Create" method="post" class="row g-3">
                        <!-- Name -->
                        <div class="col-12">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="fas fa-user me-2 text-primary"></i>اسم المؤلف
                            </label>
                            <input asp-for="Name" class="form-control fancy-input" placeholder="اكتب اسم المؤلف الكامل" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Bio -->
                        <div class="col-12">
                            <label asp-for="Bio" class="form-label fw-semibold">
                                <i class="fas fa-quote-right me-2 text-primary"></i>نبذة قصيرة
                            </label>
                            <textarea asp-for="Bio" class="form-control fancy-input" rows="4" placeholder="اكتب نبذة مختصرة عن المؤلف (اختياري)"></textarea>
                            <span asp-validation-for="Bio" class="text-danger small"></span>
                        </div>

                        <!-- Date of Birth -->
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label fw-semibold">
                                <i class="fas fa-calendar-alt me-2 text-primary"></i>تاريخ الميلاد
                            </label>
                            <input asp-for="DateOfBirth" type="date" class="form-control fancy-input" />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <!-- ImageUrl -->
                        <div class="col-md-6">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">
                                <i class="fas fa-image me-2 text-primary"></i>رابط الصورة
                            </label>
                            <input asp-for="ImageUrl" class="form-control fancy-input" placeholder="https://example.com/image.jpg" oninput="previewAuthorImage(this.value)" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <!-- Image Preview -->
                        <div class="col-12">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-eye me-2 text-primary"></i>معاينة الصورة
                            </label>
                                    <div class="preview-wrapper">
                                        <img id="authorPreview" alt="معاينة الصورة" class="img-fluid d-none" />
                                        <div id="noPreview" class="text-center">
                                            <img src="/Images/anon-icon.jpg" alt="صورة افتراضية" class="img-fluid" style="max-width: 150px; border-radius: 50%;" />
                                            <div class="text-muted small mt-2">
                                                <i class="fas fa-image me-2"></i>سيتم عرض معاينة الصورة هنا عند إدخال رابط صحيح
                                            </div>
                                        </div>
                                    </div>
                        </div>

                        <!-- Actions -->
                        <div class="col-12 d-flex gap-3 justify-content-center mt-4">
                            <a asp-action="Index" class="btn-cancel">
                                <i class="fas fa-times me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn-save">
                                <i class="fas fa-save me-2"></i>حفظ المؤلف
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-muted small text-center bg-light">
                    <i class="fas fa-info-circle me-2"></i>تأكد من صحة رابط الصورة وتنسيق التاريخ قبل الحفظ
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function isValidUrl(str) {
        try { new URL(str); return true; } catch { return false; }
    }
    function previewAuthorImage(url) {
        const img = document.getElementById('authorPreview');
        const placeholder = document.getElementById('noPreview');

        if (url && isValidUrl(url)) {
            img.src = url;
            img.classList.remove('d-none');
            placeholder.classList.add('d-none');
            img.onerror = () => {
                img.classList.add('d-none');
                placeholder.classList.remove('d-none');
            };
        } else {
            img.classList.add('d-none');
            placeholder.classList.remove('d-none');
        }
    }
</script>
