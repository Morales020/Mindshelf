    <script>
        // Simulate user authentication state
        let isLoggedIn = true; // Change to false to test login required modal
        let isAdmin = true; // Change to false to test non-admin view

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Show/hide admin controls
            if (isAdmin) {
                document.getElementById('createEventBtn').classList.remove('hidden');
                document.querySelectorAll('.admin-controls').forEach(control => {
                    control.classList.remove('hidden');
                });
            }

            // Filter functionality
            const filterButtons = document.querySelectorAll('.filter-btn');
            const eventCards = document.querySelectorAll('.event-card');
            const emptyState = document.getElementById('emptyState');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const filter = this.dataset.filter;

                    // Update active filter button
                    filterButtons.forEach(btn => {
                        btn.classList.remove('bg-red-600', 'text-white');
                        btn.classList.add('bg-gray-200', 'text-gray-700');
                    });
                    this.classList.remove('bg-gray-200', 'text-gray-700');
                    this.classList.add('bg-red-600', 'text-white');

                    // Filter events
                    let visibleCount = 0;
                    eventCards.forEach(card => {
                        const cardTypes = card.dataset.type.split(' ');

                        if (filter === 'all' || cardTypes.includes(filter)) {
                            card.style.display = 'block';
                            visibleCount++;
                        } else {
                            card.style.display = 'none';
                        }
                    });

                    // Show/hide empty state
                    if (visibleCount === 0) {
                        emptyState.classList.remove('hidden');
                    } else {
                        emptyState.classList.add('hidden');
                    }
                });
            });

            // Registration functionality
            const registerButtons = document.querySelectorAll('.register-btn');
            const registrationModal = document.getElementById('registrationModal');
            const loginModal = document.getElementById('loginModal');

            registerButtons.forEach(button => {
                button.addEventListener('click', function() {
                    if (!isLoggedIn) {
                        loginModal.classList.remove('hidden');
                        loginModal.classList.add('flex');
                    } else {
                        registrationModal.classList.remove('hidden');
                        registrationModal.classList.add('flex');
                    }
                });
            });

            // Modal controls
            document.getElementById('confirmRegistration').addEventListener('click', function() {
                registrationModal.classList.add('hidden');
                registrationModal.classList.remove('flex');

                // Show success message
                const successDiv = document.createElement('div');
                successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
                successDiv.innerHTML = '<i class="fas fa-check ml-2"></i>تم التسجيل بنجاح!';
                document.body.appendChild(successDiv);

                setTimeout(() => {
                    successDiv.remove();
                }, 3000);
            });

            document.getElementById('cancelRegistration').addEventListener('click', function() {
                registrationModal.classList.add('hidden');
                registrationModal.classList.remove('flex');
            });

            document.getElementById('goToLogin').addEventListener('click', function() {
                loginModal.classList.add('hidden');
                loginModal.classList.remove('flex');
                // Redirect to login page
                window.location.href = '/Account/Login';
            });

            document.getElementById('closeLoginModal').addEventListener('click', function() {
                loginModal.classList.add('hidden');
                loginModal.classList.remove('flex');
            });

            // Close modals when clicking outside
            [registrationModal, loginModal].forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) {
                        modal.classList.add('hidden');
                        modal.classList.remove('flex');
                    }
                });
            });

            // Create event button
            document.getElementById('createEventBtn').addEventListener('click', function() {
                window.location.href = '/Event/Create';
            });

            // Admin controls
            document.querySelectorAll('.admin-controls button').forEach(button => {
                button.addEventListener('click', function(e) {
                    if (this.querySelector('.fa-edit')) {
                        // Edit event
                        console.log('Edit event');
                    } else if (this.querySelector('.fa-trash')) {
                        // Delete event
                        if (confirm('هل أنت متأكد من حذف هذا الحدث؟')) {
                            const card = this.closest('.event-card');
                            card.style.transition = 'all 0.3s ease';
                            card.style.opacity = '0';
                            card.style.transform = 'scale(0.9)';

                            setTimeout(() => {
                                card.remove();
                            }, 300);
                        }
                    } else if (this.querySelector('.fa-eye')) {
                        // View event details
                        console.log('View event details');
                    }
                });
            });
        });
    </script>
</body>
