@model EventDetailsDto
@{
    ViewData["Title"] = "تفاصيل الحدث";
}

<style>
    /* Event Details Page Specific Styles */
    .event-details-hero {
        background: linear-gradient(135deg, var(--primary-brown) 0%, var(--dark-brown) 100%);
        color: white;
        padding: 4rem 0;
        position: relative;
        overflow: hidden;
    }

    .event-details-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .event-details-hero-content {
        position: relative;
        z-index: 2;
    }

    .event-main-card {
        background: var(--card-bg);
        border-radius: 20px;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--border-color);
        overflow: hidden;
        transition: var(--transition);
    }

    .event-main-card:hover {
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .event-header-image {
        height: 300px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .event-header-image::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
        backdrop-filter: blur(1px);
    }

    .event-header-icon {
        font-size: 6rem;
        color: white;
        z-index: 2;
        position: relative;
        text-shadow: 0 4px 8px rgba(0,0,0,0.3);
    }

    .event-content {
        padding: 3rem;
    }

    .event-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .event-description {
        color: var(--text-muted);
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 2rem;
    }

    .event-status-badges {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .status-badge {
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-badge.online {
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
        border: 2px solid rgba(59, 130, 246, 0.2);
    }

    .status-badge.offline {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 2px solid rgba(16, 185, 129, 0.2);
    }

    .status-badge.active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 2px solid rgba(16, 185, 129, 0.2);
    }

    .status-badge.inactive {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 2px solid rgba(239, 68, 68, 0.2);
    }

    .event-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: var(--light-color);
        padding: 1.5rem;
        border-radius: 16px;
        text-align: center;
        border: 1px solid var(--border-color);
        transition: var(--transition);
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md);
    }

    .stat-icon {
        font-size: 2rem;
        margin-bottom: 0.75rem;
        color: var(--primary-color);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .stat-label {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .registration-section {
        background: var(--light-color);
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        border: 1px solid var(--border-color);
    }

    .btn-register {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: white;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        border: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
    }

    .btn-register:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-register:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .sidebar-card {
        background: var(--card-bg);
        border-radius: 16px;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
        padding: 2rem;
        margin-bottom: 2rem;
        transition: var(--transition);
    }

    .sidebar-card:hover {
        box-shadow: var(--shadow-lg);
    }

    .sidebar-card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .sidebar-card-title i {
        color: var(--primary-color);
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 1.25rem;
        padding: 0.75rem;
        border-radius: 12px;
        transition: var(--transition);
    }

    .info-item:hover {
        background: var(--light-color);
    }

    .info-item i {
        width: 20px;
        margin-left: 1rem;
        color: var(--primary-color);
    }

    .info-content {
        flex: 1;
    }

    .info-label {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .info-value {
        color: var(--text-muted);
    }


    .similar-event {
        display: flex;
        align-items: center;
        padding: 1rem;
        background: var(--light-color);
        border-radius: 12px;
        margin-bottom: 1rem;
        transition: var(--transition);
        cursor: pointer;
    }

    .similar-event:hover {
        background: var(--border-color);
        transform: translateX(-4px);
    }

    .similar-event-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin-left: 1rem;
    }

    .similar-event-info {
        flex: 1;
    }

    .similar-event-title {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .similar-event-date {
        color: var(--text-muted);
        font-size: 0.85rem;
    }

    .admin-controls {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .btn-admin {
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: var(--transition);
        border: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-edit {
        background: var(--primary-color);
        color: white;
    }

    .btn-edit:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
    }

    .btn-delete {
        background: #ef4444;
        color: white;
    }

    .btn-delete:hover {
        background: #dc2626;
        transform: translateY(-2px);
    }

    /* Dark Mode Styles */
    body.dark-mode .event-main-card {
        background: var(--dark-card-bg);
        border-color: var(--dark-border-color);
    }

    body.dark-mode .event-title {
        color: var(--dark-text-primary);
    }

    body.dark-mode .event-description {
        color: #b0b0b0;
    }

    body.dark-mode .stat-card {
        background: var(--dark-card-bg);
        border-color: var(--dark-border-color);
    }

    body.dark-mode .stat-number {
        color: var(--dark-text-primary);
    }

    body.dark-mode .stat-label {
        color: #b0b0b0;
    }

    body.dark-mode .registration-section {
        background: var(--dark-card-bg);
        border-color: var(--dark-border-color);
    }

    body.dark-mode .sidebar-card {
        background: var(--dark-card-bg);
        border-color: var(--dark-border-color);
    }

    body.dark-mode .sidebar-card-title {
        color: var(--dark-text-primary);
    }

    body.dark-mode .info-item:hover {
        background: var(--dark-border-color);
    }

    body.dark-mode .info-label {
        color: var(--dark-text-primary);
    }

    body.dark-mode .info-value {
        color: #b0b0b0;
    }


    body.dark-mode .similar-event {
        background: var(--dark-border-color);
    }

    body.dark-mode .similar-event:hover {
        background: var(--dark-card-bg);
    }

    body.dark-mode .similar-event-title {
        color: var(--dark-text-primary);
    }

    body.dark-mode .similar-event-date {
        color: #b0b0b0;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .event-details-hero {
            padding: 2rem 0;
        }

        .event-content {
            padding: 2rem 1.5rem;
        }

        .event-title {
            font-size: 2rem;
        }

        .event-stats {
            grid-template-columns: repeat(2, 1fr);
        }

        .admin-controls {
            flex-direction: column;
        }

        .btn-admin {
            width: 100%;
            justify-content: center;
        }
    }
</style>
<!-- Hero Section -->
<div class="event-details-hero">
    <div class="container">
        <div class="event-details-hero-content text-center">
            <i class="fas fa-calendar-check text-6xl mb-4 opacity-90"></i>
            <h1 class="text-4xl md:text-5xl font-bold mb-4">تفاصيل الحدث</h1>
            <p class="text-xl opacity-90">اكتشف المزيد عن هذا الحدث المميز</p>
        </div>
    </div>
</div>

<!-- Main Content -->
<main class="container py-8">
    <div class="row g-4">
        <!-- Event Details -->
        <div class="col-lg-8">
            <div class="event-main-card">
                <!-- Event Header Image -->
                <div class="event-header-image">
                    <i class="fas fa-calendar-alt event-header-icon"></i>
                </div>

                <!-- Event Content -->
                <div class="event-content">
                    <!-- Admin Controls -->
                    @if (ViewBag.IsAdmin == true)
                    {
                        <div class="admin-controls">
                            <a asp-controller="Event" asp-action="Edit" asp-route-id="@Model.EventId" class="btn-admin btn-edit">
                                <i class="fas fa-edit"></i>
                                تعديل الحدث
                            </a>
                            <a asp-controller="Event" asp-action="Delete" asp-route-id="@Model.EventId" class="btn-admin btn-delete">
                                <i class="fas fa-trash"></i>
                                حذف الحدث
                            </a>
                        </div>
                    }

                    <!-- Event Title and Status -->
                    <h1 class="event-title">@Model.Title</h1>
                    
                    <div class="event-status-badges">
                        <span class="status-badge @(Model.IsOnline ? "online" : "offline")">
                            <i class="fas @(Model.IsOnline ? "fa-video" : "fa-building")"></i>
                            @(Model.IsOnline ? "أونلاين" : "حضوري")
                        </span>
                        <span class="status-badge @(Model.IsActive ? "active" : "inactive")">
                            <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-times-circle")"></i>
                            @(Model.IsActive ? "نشط" : "منتهي")
                        </span>
                    </div>

                    <!-- Event Description -->
                    <div class="event-description">
                        @Model.Description
                    </div>

                    <!-- Event Stats -->
                    <div class="event-stats">
                        <div class="stat-card">
                            <i class="fas fa-users stat-icon"></i>
                            <div class="stat-number">@Model.Registrations.Count()</div>
                            <div class="stat-label">مشارك مسجل</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-calendar stat-icon"></i>
                            <div class="stat-number">@Model.StartingDate.ToString("dd")</div>
                            <div class="stat-label">@Model.StartingDate.ToString("MMMM")</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-clock stat-icon"></i>
                            <div class="stat-number">@Model.StartingDate.ToString("HH:mm")</div>
                            <div class="stat-label">وقت البداية</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-star stat-icon"></i>
                            <div class="stat-number">4.8</div>
                            <div class="stat-label">تقييم</div>
                        </div>
                    </div>

                    <!-- Registration Section -->
                    <div class="registration-section">
                        @if (Model.IsActive)
                        {
                            var userId = ViewBag?.CurrentUserId as string;
                            var isRegistered = userId != null && Model.Registrations.Any(r => r.UserId == userId);
                            <form method="post" asp-controller="Event" asp-action="RegisterForEvent" class="d-inline" id="detailsRegisterForm">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="EventId" value="@Model.EventId" />
                            </form>
                            <button class="btn-register" id="registerBtn" data-registered="@isRegistered.ToString().ToLower()">
                                <i class="fas @(isRegistered ? "fa-times" : "fa-calendar-plus")"></i>
                                @(isRegistered ? "إلغاء التسجيل" : "سجل في الحدث الآن")
                            </button>
                            <p class="text-muted mt-3 mb-0">التسجيل مجاني ومتاح للجميع</p>
                        }
                        else
                        {
                            <button class="btn-register" disabled>
                                <i class="fas fa-times-circle"></i>
                                الحدث منتهي
                            </button>
                            <p class="text-muted mt-3 mb-0">لم يعد التسجيل متاحاً لهذا الحدث</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Event Info Card -->
            <div class="sidebar-card">
                <h3 class="sidebar-card-title">
                    <i class="fas fa-info-circle"></i>
                    معلومات الحدث
                </h3>

                <div class="info-item">
                    <i class="fas fa-calendar"></i>
                    <div class="info-content">
                        <div class="info-label">تاريخ البداية</div>
                        <div class="info-value">@Model.StartingDate.ToString("dd MMMM yyyy")</div>
                    </div>
                </div>

                <div class="info-item">
                    <i class="fas fa-calendar-check"></i>
                    <div class="info-content">
                        <div class="info-label">تاريخ النهاية</div>
                        <div class="info-value">@Model.EndingDate.ToString("dd MMMM yyyy")</div>
                    </div>
                </div>

                <div class="info-item">
                    <i class="fas fa-clock"></i>
                    <div class="info-content">
                        <div class="info-label">التوقيت</div>
                        <div class="info-value">@Model.StartingDate.ToString("HH:mm") - @Model.EndingDate.ToString("HH:mm")</div>
                    </div>
                </div>

                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div class="info-content">
                        <div class="info-label">الموقع</div>
                        <div class="info-value">@Model.Location</div>
                    </div>
                </div>

                <div class="info-item">
                    <i class="fas fa-tag"></i>
                    <div class="info-content">
                        <div class="info-label">السعر</div>
                        <div class="info-value">مجاني</div>
                    </div>
                </div>
            </div>


            <!-- Similar Events -->
            <div class="sidebar-card">
                <h3 class="sidebar-card-title">
                    <i class="fas fa-calendar-alt"></i>
                    أحداث مشابهة
                </h3>

                @if (ViewBag.SimilarEvents != null && ((IEnumerable<MindShelf_BL.Dtos.EventDtos.EventResponseDto>)ViewBag.SimilarEvents).Any())
                {
                    @foreach (var similarEvent in (IEnumerable<MindShelf_BL.Dtos.EventDtos.EventResponseDto>)ViewBag.SimilarEvents)
                    {
                        var colors = new[] { 
                            "linear-gradient(135deg, #10b981 0%, #059669 100%)",
                            "linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%)",
                            "linear-gradient(135deg, #f59e0b 0%, #d97706 100%)"
                        };
                        var icons = new[] { "fas fa-code", "fas fa-robot", "fas fa-lightbulb" };
                        var index = Array.IndexOf(((IEnumerable<MindShelf_BL.Dtos.EventDtos.EventResponseDto>)ViewBag.SimilarEvents).ToArray(), similarEvent);
                        
                        <div class="similar-event" onclick="window.location.href='@Url.Action("Details", "Event", new { id = similarEvent.EventId })'">
                            <div class="similar-event-icon" style="background: @colors[index % colors.Length];">
                                <i class="@icons[index % icons.Length]"></i>
                            </div>
                            <div class="similar-event-info">
                                <div class="similar-event-title">@similarEvent.Title</div>
                                <div class="similar-event-date">@similarEvent.StartingDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("ar-EG"))</div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        <i class="fas fa-calendar-times mb-2"></i>
                        <p>لا توجد أحداث مشابهة متاحة</p>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // Event Details Page Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const registerBtn = document.getElementById('registerBtn');

            if (registerBtn) {
                registerBtn.addEventListener('click', async function() {
                    const isLoggedIn = @(ViewBag.IsLoggedIn == true ? "true" : "false");
                    if (!isLoggedIn) { window.location.href = '/Account/Login'; return; }

                    const isRegistered = this.getAttribute('data-registered') === 'true';
                    const form = document.getElementById('detailsRegisterForm');
                    const token = form?.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    
                    const endpoint = isRegistered ? '/Event/CancelRegistrationAjax' : '/Event/RegisterForEventAjax';
                    const res = await fetch(endpoint, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token || '' },
                        body: JSON.stringify({ eventId: @Model.EventId })
                    });
                    if (res.ok) {
                        if (isRegistered) {
                            // Cancel registration
                            this.innerHTML = '<i class="fas fa-calendar-plus"></i>سجل في الحدث الآن';
                            this.setAttribute('data-registered', 'false');
                            showNotification('تم إلغاء التسجيل بنجاح!', 'success');
                            // Update participant count
                            updateDetailsParticipantCount(-1);
                        } else {
                            // Register
                            this.innerHTML = '<i class="fas fa-times"></i>إلغاء التسجيل';
                            this.setAttribute('data-registered', 'true');
                            showNotification('تم التسجيل في الحدث بنجاح!', 'success');
                            // Update participant count
                            updateDetailsParticipantCount(1);
                        }
                    } else {
                        const txt = await res.text();
                        showNotification('تعذر إتمام العملية: ' + txt, 'danger');
                    }
                });
            }

            // Similar events click handlers
            document.querySelectorAll('.similar-event').forEach(event => {
                event.addEventListener('click', function() {
                    // Here you would navigate to the similar event details
                    console.log('Navigating to similar event...');
                });
            });

            // Function to update participant count on details page
            function updateDetailsParticipantCount(change) {
                const statCard = document.querySelector('.stat-card:first-child .stat-number');
                if (statCard) {
                    const currentCount = parseInt(statCard.textContent);
                    const newCount = Math.max(0, currentCount + change);
                    statCard.textContent = newCount;
                }
            }
        });

        // Notification function
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'info-circle'} ml-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(notification);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 5000);
        }
    </script>
}
