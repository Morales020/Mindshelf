@using Microsoft.AspNetCore.Identity
@inject SignInManager<MindShelf_DAL.Models.User> SignInManager
@inject UserManager<MindShelf_DAL.Models.User> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        var claimName = User?.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? currentUser?.UserName;
        var claimPicture = User?.FindFirst("urn:google:picture")?.Value;
        var isAdmin = User.IsInRole("Admin");

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
               id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="user-avatar me-2">
                    @if (!string.IsNullOrWhiteSpace(claimPicture))
                    {
                        <img src="@claimPicture" alt="avatar" style="width:28px;height:28px;border-radius:50%;object-fit:cover;" />
                    }
                    else
                    {
                        <i class="fas fa-user-circle fs-4"></i>
                    }
                </div>
                <div class="user-info">
                    <span class="user-name">@(claimName ?? "المستخدم")</span>
                    @if (isAdmin)
                    {
                        <br>

                        <small class="badge bg-danger">مدير</small>
                    }
                </div>
            </a>

            <ul class="dropdown-menu dropdown-menu-end">
                @if (isAdmin)
                {
                    <li>
                        <h6 class="dropdown-header">
                            <i class="fas fa-crown text-warning"></i> إدارة النظام
                        </h6>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/Admin/Dashboard">
                            <i class="fas fa-tachometer-alt text-primary"></i> لوحة التحكم
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Index", "Books")">
                            <i class="fas fa-book text-success"></i> إدارة الكتب
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Index", "Author")">
                            <i class="fas fa-user-edit text-info"></i> إدارة المؤلفين
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Index", "Category")">
                            <i class="fas fa-list text-warning"></i> إدارة التصنيفات
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Index", "Order")">
                            <i class="fas fa-shopping-bag text-brown"></i> إدارة الطلبات
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Index", "Event")">
                            <i class="fas fa-calendar-alt text-purple"></i> إدارة الفعاليات
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                }

                <li>
                    <h6 class="dropdown-header">
                        <i class="fas fa-user"></i> حسابي الشخصي
                    </h6>
                </li>
                <li>
                    <a class="dropdown-item" href="/Account/Profile">
                        <i class="fas fa-id-card"></i> الملف الشخصي
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="FavouriteBook" asp-action="Index">
                        <i class="fas fa-heart text-danger"></i> الكتب المفضلة
                        <span class="badge bg-secondary ms-1">@ViewBag.FavoritesCount</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Order" asp-action="ByUser"
                       asp-route-userName="@User.Identity.Name">
                        <i class="fas fa-shopping-bag text-brown"></i> طلباتي
                        <span class="badge bg-secondary ms-1">@ViewBag.OrdersCount</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Cart" asp-action="GetCartByUserName"
                       asp-route-userName="@User.Identity.Name">
                        <i class="fas fa-shopping-cart text-success"></i> سلة التسوق
                        <span class="badge bg-primary ms-1 cart-counter">@ViewBag.CartCount</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="/Account/Settings">
                        <i class="fas fa-cog"></i> الإعدادات
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>

                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt"></i> تسجيل الدخول
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-primary text-white ms-2 px-3"
               asp-controller="Account" asp-action="Register">
                <i class="fas fa-user-plus"></i> إنشاء حساب جديد
            </a>
        </li>
    }
</ul>