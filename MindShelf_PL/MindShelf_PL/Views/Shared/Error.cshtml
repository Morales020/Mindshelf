@model MindShelf_PL.Models.ErrorViewModel
@{
    ViewData["Title"] = "خطأ";
}

<div class="container text-center py-5">
    <!-- أيقونة -->
    <div class="display-1 text-danger fw-bold animate-bounce">⚠️</div>

    <!-- العنوان -->
    <h1 class="fw-bold text-danger">حصل خطأ غير متوقع!</h1>
    <p class="text-muted fs-5">
        نأسف، حصلت مشكلة أثناء معالجة طلبك.
    </p>

    <!-- الرسالة -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-warning shadow-sm mt-4" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            @Model.Message
        </div>
    }

    <!-- Request Id -->
    @if (Model.ShowRequestId)
    {
        <p class="text-muted small mt-3">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <!-- زر العودة -->
    <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-primary mt-4 shadow">
        ⬅️ العودة للصفحة الرئيسية
    </a>
</div>

<!-- Custom CSS -->
<style>
    .animate-bounce {
        animation: bounce 1.5s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-15px);
    }

    }

    .alert {
        border-radius: 15px;
        font-size: 1.1rem;
    }

    .btn {
        border-radius: 12px;
        padding: 10px 25px;
    }
</style>
