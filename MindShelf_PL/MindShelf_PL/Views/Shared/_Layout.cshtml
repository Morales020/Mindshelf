@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@inject SignInManager<MindShelf_DAL.Models.User> SignInManager
@inject UserManager<MindShelf_DAL.Models.User> UserManager

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - مكتبة MindShelf الرقمية</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;500;600;700;800;900&family=Amiri:wght@400;700&display=swap" rel="stylesheet">

    <!-- Bootstrap RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/digital-library.css" asp-append-version="true" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site-toast.js"></script>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="icon" href="~/Images/Small_logo.png" type="image/x-icon">
</head>

<body class="@(ViewBag.BodyClass ?? "")">
    <!-- Header -->
    <header class="digital-header sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="logo-icon me-3">
                        <img src="~/Images/Small logo.png" alt="logo" width="53" height="60"
                             style="filter: hue-rotate(202deg) saturate(350%) brightness(60%);">
                    </div>
                    <div class="logo-text">
                        <h4 class="mb-0 text-primary fw-bold">MindShelf</h4>
                        <small class="text-muted">بوابتك إلى المعرفة</small>
                    </div>
                </a>

                <!-- Mobile Menu Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Menu -->
                <div class="collapse navbar-collapse align-items-lg-center gap-2" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> الرئيسية
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index">
                                <i class="fas fa-book"></i> الكتب
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Author" asp-action="Index">
                                <i class="fas fa-user-edit"></i> المؤلفون
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Category" asp-action="Index">
                                <i class="fas fa-list"></i> التصنيفات
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Event" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i> الفعاليات
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Community" asp-action="Index">
                                <i class="fas fa-comments"></i> المجتمع
                            </a>
                        </li>
                        <li class="nav-item">
	                        @if (User.IsInRole("Admin"))
	                        {
		                        <a class="nav-link" asp-controller="Order" asp-action="Index">
			                        <i class="fas fa-shopping-bag"></i> الطلبات
		                        </a>
	                        }
	                        else if (User.Identity.IsAuthenticated)
	                        {
		                        <a class="nav-link" asp-controller="Order" asp-action="UserOrders" asp-route-userName="@User.Identity.Name">
			                        <i class="fas fa-shopping-bag"></i> طلباتي
		                        </a>
	                        }
                        </li>
                    </ul>

                  <!-- Search Toggle Button -->
                    <button class="btn btn-outline-light search-toggle-btn me-2 me-lg-3 order-lg-0" id="searchToggleBtn">
                        <i class="fas fa-search"></i>
                    </button>
                  
                    <!-- User Menu -->
                    <ul class="navbar-nav ms-lg-3 align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var rawName = User?.FindFirst("display_name")?.Value
                                           ?? currentUser?.UserName
                                           ?? User?.Identity?.Name;
                            var displayName = (rawName?.Contains("@") == true) ? rawName.Split('@')[0] : rawName;
                            
                            // Check avatar privacy setting
                            var shareAvatarClaim = User?.FindFirst("share_avatar")?.Value;
                            var shareAvatar = shareAvatarClaim == null ? true : shareAvatarClaim == "true";
                            var avatarUrl = shareAvatar ? (currentUser?.ProfileImageUrl
                                               ?? User?.FindFirst("urn:google:picture")?.Value
                                               ?? User?.FindFirst("picture")?.Value) : null;
                            var isAdmin = User.IsInRole("Admin");

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
                                   id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    @if (!string.IsNullOrWhiteSpace(avatarUrl))
                                    {
                                        <img src="@avatarUrl" alt="avatar" style="width:28px;height:28px;border-radius:50%;object-fit:cover;" class="me-2" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-user-circle fs-4 me-2"></i>
                                    }
                                    <span>@(displayName ?? "المستخدم")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="px-3 py-2">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrWhiteSpace(avatarUrl))
                                            {
                                                <img src="@avatarUrl" alt="avatar" style="width:40px;height:40px;border-radius:50%;object-fit:cover;" class="me-2" />
                                            }
                                            else
                                            {
                                                <i class="fas fa-user-circle fs-2 me-2"></i>
                                            }
                                            <div>
                                                <div class="fw-bold">@displayName</div>
                                                <div class="text-muted" style="font-size:12px;">@currentUser?.Email</div>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-id-card"></i> الملف الشخصي
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="FavouriteBook" asp-action="Index">
                                            <i class="fas fa-heart"></i> المفضلة
                                        </a>
                                    </li>
                                    <li>
	                                    @if (User.IsInRole("Admin"))
	                                    {
		                                    <a class="dropdown-item" asp-controller="Order" asp-action="Index">
			                                    <i class="fas fa-shopping-bag"></i> الطلبات
		                                    </a>
	                                    }
	                                    else if (User.Identity.IsAuthenticated)
	                                    {
		                                    <a class="dropdown-item" asp-controller="Order" asp-action="UserOrders" asp-route-userName="@displayName">
			                                    <i class="fas fa-shopping-bag"></i> طلباتي
		                                    </a>
	                                    }
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Cart" asp-action="Index"
                                           asp-route-userName="@displayName">
                                            <i class="fas fa-shopping-cart"></i> السلة
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> تسجيل الدخول
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> إنشاء حساب
                                </a>
                            </li>
                        }

                        <!-- Dark Mode Toggle -->
                        <li class="nav-item d-flex align-items-center">
                            <button class="nav-link d-flex align-items-center justify-content-center p-0 ms-2" id="darkModeToggle" title="التبديل للوضع الليلي" style="height:40px;width:40px;border-radius:8px;">
                                <i class="fas fa-moon"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Search Bar Section -->
        <div class="search-overlay" id="searchOverlay" style="display: none;">
            <div class="container">
                <div class="search-container-full" id="searchContainer">
                    <form class="d-flex" asp-controller="Books" asp-action="Index" method="get">
                        <div class="input-group search-input-group">
                            <input class="form-control search-input-full" type="search" name="searchTerm"
                                   placeholder="البحث عن كتاب، مؤلف، أو فئة..." id="smartSearch">
                            <button class="btn btn-primary search-btn-full" type="submit">
                                <i class="fas fa-search me-2"></i>بحث
                            </button>
                        </div>
                    </form>
                    <div class="search-suggestions-full" id="searchSuggestions"></div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <!-- Breadcrumb (if available) -->
        @if (ViewBag.Breadcrumbs != null)
        {
            <nav aria-label="breadcrumb" class="bg-light py-2">
                <div class="container">
                    <ol class="breadcrumb mb-0">
                        @foreach (var breadcrumb in ViewBag.Breadcrumbs)
                        {
                            <li class="breadcrumb-item">
                                @if (breadcrumb.Url != null)
                                {
                                    <a href="@breadcrumb.Url">@breadcrumb.Title</a>
                                }
                                else
                                {
                                    @breadcrumb.Title
                                }
                            </li>
                        }
                    </ol>
                </div>
            </nav>
        }

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-info-circle"></i> @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Page Content -->
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="digital-footer py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="footer-section">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-book-open"></i> مكتبة MindShelf
                        </h5>
                        <p class="text-muted">
                            بوابتك الرقمية إلى عالم المعرفة والثقافة. اكتشف آلاف الكتب والمؤلفات في جميع المجالات.
                        </p>
                        <div class="social-links">
                            <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="text-white"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="footer-section">
                        <h6 class="text-primary">روابط سريعة</h6>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Index", "Home")" class="text-muted">الرئيسية</a></li>
                            <li><a href="@Url.Action("Index", "Books")" class="text-muted">الكتب</a></li>
                            <li><a href="@Url.Action("Index", "Author")" class="text-muted">المؤلفون</a></li>
                            <li><a href="@Url.Action("Index", "Event")" class="text-muted">الفعاليات</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="footer-section">
                        <h6 class="text-primary">الخدمات</h6>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-muted">استعارة الكتب</a></li>
                            <li><a href="#" class="text-muted">القراءة الإلكترونية</a></li>
                            <li><a href="#" class="text-muted">الاشتراك الشهري</a></li>
                            <li><a href="#" class="text-muted">التحميل المجاني</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="footer-section">
                        <h6 class="text-primary">النشرة البريدية</h6>
                        <p class="text-muted">اشترك لتصلك آخر الكتب والفعاليات</p>
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="بريدك الإلكتروني">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">
                        &copy; @DateTime.Now.Year مكتبة MindShelf الرقمية. جميع الحقوق محفوظة.
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="#" class="text-muted me-3">سياسة الخصوصية</a>
                    <a href="#" class="text-muted me-3">الشروط والأحكام</a>
                    <a href="~/html/AboutUs.html" class="text-muted">اتصل بنا</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/digital-library.js" asp-append-version="true"></script>

    <!-- SignalR for Book Notifications & Private Message Toasts -->
    @if (SignInManager.IsSignedIn(User))
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
        <script>
            // Book Notification System
            const bookNotificationConnection = new signalR.HubConnectionBuilder()
                .withUrl('/bookNotificationHub')
                .withAutomaticReconnect()
                .build();

            bookNotificationConnection.start()
                .then(() => {
                    console.log('Book notification connection established');
                    return bookNotificationConnection.invoke('JoinBookNotifications');
                })
                .then(() => {
                    console.log('Joined book notifications group');
                })
                .catch(err => {
                    console.error('Book notification connection failed:', err.toString());
                });

            // Listen for new book notifications
            bookNotificationConnection.on('NewBookAdded', function (bookData) {
                console.log('New book notification received:', bookData);
                
                // Create notification toast
                showBookNotification(bookData);
            });

            function showBookNotification(bookData) {
                // Create toast notification
                const toastHtml = `
                    <div class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body d-flex align-items-center">
                                <i class="fas fa-book me-2"></i>
                                <div>
                                    <strong>كتاب جديد!</strong><br>
                                    <small>${bookData.title} - ${bookData.authorName}</small>
                                </div>
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                `;

                // Create toast container if it doesn't exist
                let toastContainer = document.getElementById('bookNotificationContainer');
                if (!toastContainer) {
                    toastContainer = document.createElement('div');
                    toastContainer.id = 'bookNotificationContainer';
                    toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
                    toastContainer.style.zIndex = '9999';
                    document.body.appendChild(toastContainer);
                }

                // Add toast to container
                toastContainer.insertAdjacentHTML('beforeend', toastHtml);
                
                // Show the toast
                const toastElement = toastContainer.lastElementChild;
                const toast = new bootstrap.Toast(toastElement, {
                    autohide: true,
                    delay: 5000
                });
                toast.show();

                // Remove toast element after it's hidden
                toastElement.addEventListener('hidden.bs.toast', function() {
                    toastElement.remove();
                });
            }

            // Connection state logging
            bookNotificationConnection.onclose((error) => {
                console.log('Book notification connection closed:', error);
            });

            bookNotificationConnection.onreconnecting((error) => {
                console.log('Book notification reconnecting:', error);
            });

            bookNotificationConnection.onreconnected((connectionId) => {
                console.log('Book notification reconnected:', connectionId);
                // Rejoin the group after reconnection
                bookNotificationConnection.invoke('JoinBookNotifications');
            });
        </script>

        <script>
            // Private message lightweight listener for toasts (no chat page needed)
            const pmToastConnection = new signalR.HubConnectionBuilder()
                .withUrl('/privateChatHub')
                .withAutomaticReconnect()
                .build();

            function getQueryParam(name){
                const params = new URLSearchParams(window.location.search);
                return params.get(name);
            }

            pmToastConnection.on('ReceivePrivateMessage', (senderId, senderName, message, time, avatar) => {
                // If the user is on the chat page with this sender, or a page registered as active chat, skip toast
                const onPrivateChat = window.location.pathname.toLowerCase() === '/chat/private';
                const openWith = getQueryParam('userId');
                if ((onPrivateChat && openWith === senderId) || (window.activeChatWith && window.activeChatWith === senderId)) return;
                const shown = senderName || 'مستخدم';
                if (typeof showPmToast === 'function') {
                    showPmToast(shown, message, avatar, `/Chat/Private?userId=${encodeURIComponent(senderId)}`);
                } else if (typeof showToast === 'function') {
                    showToast(`${shown}: ${message}`);
                }
            });

            pmToastConnection.start().catch(err => console.error('PM toast connection failed:', err));
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Loading Overlay -->
    <div id="loadingOverlay" class="loading-overlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">جاري التحميل...</span>
        </div>
    </div>
</body>

</html>