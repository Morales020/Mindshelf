@model IEnumerable<FavouriteBookResponseDto>
@Html.AntiForgeryToken()

<style>
    .alert, .alert-danger, .alert-success, .alert-warning, .alert-info {
        display: none !important;
    }
    
    .page-header {
        background: var(--wood-brown);
        color: white;
        padding: 2rem 0;
        text-align: center;
    }
    
    .page-header h1 {
        font-size: 2.5rem;
        margin: 0;
    }
    
    .book-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: box-shadow 0.3s ease;
        border: none;
    }
    
    .book-card:hover {
        box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    }
    
    .book-image {
        height: 250px;
        object-fit: cover;
    }
    
    .book-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--dark-blue);
        margin-bottom: 0.5rem;
    }
    
    .book-meta {
        color: var(--dark-brown);
        font-size: 0.9rem;
    }
    
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 8px;
        margin: 2rem 0;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .empty-state i {
        font-size: 4rem;
        color: var(--wood-brown);
        margin-bottom: 1.5rem;
    }
    
    .empty-state h3 {
        color: var(--dark-blue);
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    
    .empty-state p {
        color: var(--dark-brown);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }
    
    .btn-explore {
        background-color: #8B4513 !important;
        border: none !important;
        padding: 0.8rem 2rem !important;
        font-size: 1.1rem !important;
        border-radius: 6px !important;
        color: white !important;
        text-decoration: none !important;
        transition: background-color 0.3s ease !important;
        display: inline-block !important;
        cursor: pointer !important;
        font-weight: 500 !important;
        opacity: 1 !important;
        visibility: visible !important;
    }
    
    .btn-explore:hover {
        background-color: #654321 !important;
        color: white !important;
        text-decoration: none !important;
    }
    
    .btn-explore:focus {
        outline: none !important;
        box-shadow: 0 0 0 2px rgba(139, 69, 19, 0.3) !important;
    }
    
    /* Dark Mode Styles - Consistent with main theme */
    body.dark-mode .page-header {
        background: linear-gradient(135deg, var(--primary-brown) 0%, var(--secondary-brown) 100%) !important;
        color: var(--light-beige) !important;
    }
    
    body.dark-mode .page-header h1 {
        color: var(--light-beige) !important;
    }
    
    body.dark-mode .page-header i {
        color: var(--primary-beige) !important;
    }
    
    body.dark-mode .book-card {
        background-color: #2d2d2d !important;
        color: var(--light-beige) !important;
        border-color: #404040 !important;
    }
    
    body.dark-mode .book-card:hover {
        background-color: #353535 !important;
        box-shadow: 0 4px 16px rgba(0,0,0,0.3) !important;
    }
    
    body.dark-mode .book-title {
        color: var(--light-beige) !important;
    }
    
    body.dark-mode .book-meta {
        color: #b0b0b0 !important;
    }
    
    body.dark-mode .book-meta strong {
        color: var(--primary-beige) !important;
    }
    
    body.dark-mode .book-meta i {
        color: var(--primary-beige) !important;
    }
    
    body.dark-mode .empty-state {
        background-color: #2d2d2d !important;
        color: var(--light-beige) !important;
        border-color: #404040 !important;
    }
    
    body.dark-mode .empty-state h3 {
        color: var(--light-beige) !important;
    }
    
    body.dark-mode .empty-state p {
        color: #b0b0b0 !important;
    }
    
    body.dark-mode .empty-state i {
        color: var(--primary-beige) !important;
    }
    
    body.dark-mode .btn-explore {
        background-color: var(--primary-blue) !important;
        color: white !important;
        opacity: 1 !important;
        visibility: visible !important;
    }
    
    body.dark-mode .btn-explore:hover {
        background-color: var(--primary-brown) !important;
        color: white !important;
        text-decoration: none !important;
    }
    
    body.dark-mode .btn-explore:focus {
        outline: none !important;
        box-shadow: 0 0 0 2px rgba(30, 58, 138, 0.3) !important;
    }
    
    body.dark-mode .btn-explore i {
        color: white !important;
    }
    
    /* Dark mode buttons */
    body.dark-mode .btn-primary {
        background-color: var(--primary-blue) !important;
        border-color: var(--primary-blue) !important;
        color: white !important;
    }
    
    body.dark-mode .btn-primary:hover {
        background-color: var(--primary-brown) !important;
        border-color: var(--primary-brown) !important;
        color: white !important;
    }
    
    body.dark-mode .btn-danger {
        background-color: var(--danger-color) !important;
        border-color: var(--danger-color) !important;
    }
    
    body.dark-mode .btn-danger:hover {
        background-color: #c82333 !important;
        border-color: #bd2130 !important;
    }
</style>

<div class="page-header">
    <div class="container">
        <h1><i class="fas fa-heart me-3"></i>كتبي المفضلة</h1>
    </div>
</div>

<div class="container mt-4">
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var fav in Model)
            {
                <div class="col">
                    <div class="card book-card h-100">
                        <div class="position-relative">
                            <img src="@fav.BookImageUrl" 
                                 class="card-img-top book-image" 
                                 alt="@fav.BookTitle"
                                 onerror="this.src='/Images/books/default.jpg'">
                            
                            <button type="button" 
                                    class="btn btn-sm btn-danger position-absolute favourite-btn"
                                    style="top: 15px; left: 15px;"
                                    data-book-id="@fav.BookId"
                                    onclick="toggleFavourite(@fav.BookId, this)"
                                    title="إزالة من المفضلة">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="book-title">@fav.BookTitle</h5>
                            <div class="book-meta mb-3">
                                <p class="mb-1">
                                    <i class="fas fa-user me-2"></i>
                                    أضيفت بواسطة: <strong>@fav.UserName</strong>
                                </p>
                                <p class="mb-0">
                                    <i class="fas fa-calendar me-2"></i>
                                    @(fav.AddedDate?.ToString("dd MMM yyyy") ?? "غير محدد")
                                </p>
                            </div>
                            
                            <div class="mt-auto">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@fav.BookId" 
                                   class="btn btn-primary w-100">
                                    <i class="fas fa-eye me-2"></i>عرض التفاصيل
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-heart-broken"></i>
            <h3>لا توجد كتب مفضلة بعد</h3>
            <p>ابدأ رحلتك في اكتشاف الكتب الرائعة وأضف المفضلة لديك</p>
            <a href="@Url.Action("Index", "Books")" class="btn-explore">
                <i class="fas fa-book me-2"></i>تصفح الكتب
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleFavourite(bookId, btn) {
            var token = $('input[name="__RequestVerificationToken"]').val();
            
            // Disable button to prevent multiple clicks
            $(btn).prop('disabled', true);
            
            // Show loading state
            var originalText = $(btn).html();
            $(btn).html('<i class="fas fa-spinner fa-spin"></i> جاري التحديث...');

            $.ajax({
                url: '@Url.Action("ToggleFavourite", "FavouriteBook")',
                type: 'POST',
                data: { 
                    bookId: bookId, 
                    __RequestVerificationToken: token 
                },
                success: function(response) {
                    if (response.success) {
                        if (response.isFavourited) {
                            // Book is still favourited (shouldn't happen on this page)
                            $(btn).html('<i class="fas fa-heart"></i> في المفضلة');
                            $(btn).removeClass('btn-outline-danger').addClass('btn-danger');
                            $(btn).attr('title', 'في المفضلة');
                        } else {
                            // Book was removed from favourites
                            // Hide the entire card with animation
                            $(btn).closest('.col').fadeOut(500, function() {
                                $(this).remove();
                                
                                // Check if no more favourites left
                                if ($('.col').length === 0) {
                                    // Check if empty state already exists to prevent duplicates
                                    if ($('.empty-state').length === 0) {
                                        // Find the main container and replace only the content after the header
                                        var mainContainer = $('.container.mt-4');
                                        if (mainContainer.length > 0) {
                                            mainContainer.html(`
                                                <div class="empty-state">
                                                    <i class="fas fa-heart-broken"></i>
                                                    <h3>لا توجد كتب مفضلة بعد</h3>
                                                    <p>ابدأ رحلتك في اكتشاف الكتب الرائعة وأضف المفضلة لديك</p>
                                                    <a href="@Url.Action("Index", "Books")" class="btn-explore">
                                                        <i class="fas fa-book me-2"></i>تصفح الكتب
                                                    </a>
                                                </div>
                                            `);
                                        }
                                    }
                                }
                            });
                        }
                        
                        // Success - no message needed
                    } else {
                        // Restore original state on error
                        $(btn).html(originalText);
                        // No alert message needed
                    }
                },
                error: function(xhr, status, error) {
                    // Restore original state
                    $(btn).html(originalText);
                    $(btn).prop('disabled', false);
                    
                    // No error message needed
                },
                complete: function() {
                    // Re-enable button
                    $(btn).prop('disabled', false);
                }
            });
        }
    </script>
}

