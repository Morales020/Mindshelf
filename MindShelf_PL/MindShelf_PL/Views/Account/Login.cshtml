@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "_Layout";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 9999; max-width: 400px;">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<style>
    /* Login Page Specific Styles */
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        direction: rtl;
    }

    .login-form {
        background: var(--card-bg);
        padding: 3rem;
        border-radius: 16px;
        box-shadow: var(--shadow-lg);
        width: 100%;
        max-width: 500px;
        border: 1px solid var(--border-color);
        transition: var(--transition);
    }

    .login-form h3 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .login-form p {
        color: var(--text-muted);
        text-align: center;
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 1rem;
    }

    .form-control {
        width: 100%;
        padding: 1rem;
        font-size: 1rem;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        background-color: var(--input-bg);
        color: var(--text-primary);
        transition: var(--transition);
        height: auto;
        text-align: right;
        direction: rtl;
        padding-left: 1rem;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.1);
    }

    .form-control::placeholder {
        color: var(--text-muted);
        opacity: 0.7;
        text-align: right;
        direction: rtl;
    }

    .btn-chocolate {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 1rem 2rem;
        border: none;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
        width: 100%;
        height: auto;
    }

    .btn-chocolate:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
        background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-color) 100%);
    }

    .btn-google {
        background: linear-gradient(135deg, #4285f4 0%, #34a853 100%);
        color: white;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 12px;
        padding: 1rem 2rem;
        border: none;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 1rem;
        width: 100%;
    }

    .btn-google:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
        background: linear-gradient(135deg, #34a853 0%, #4285f4 100%);
    }

    /* Dark-mode: keep Google button vivid and readable like main login button */
    body.dark-mode .btn-google {
        background: linear-gradient(135deg, #4285f4 0%, #34a853 100%);
        color: #ffffff;
        border: 1px solid rgba(255,255,255,0.08);
        box-shadow: 0 6px 14px rgba(0,0,0,0.35);
    }

    body.dark-mode .btn-google i { color: #ffffff; }

    body.dark-mode .btn-google:hover {
        background: linear-gradient(135deg, #34a853 0%, #4285f4 100%);
        box-shadow: 0 8px 18px rgba(0,0,0,0.45);
    }

    .forgot-pass {
        color: var(--primary-color);
        text-decoration: none;
        font-size: 0.9rem;
        transition: var(--transition);
    }

    .forgot-pass:hover {
        color: var(--primary-dark);
        text-decoration: underline;
    }

    .remember-me-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.5rem;
    }

    .control {
        position: relative;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .control input[type="checkbox"] {
        margin-left: 0.5rem;
        width: 18px;
        height: 18px;
        accent-color: var(--primary-color);
    }

    .caption {
        color: var(--text-primary);
        font-size: 0.9rem;
    }

    .password-toggle {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--text-muted);
        cursor: pointer;
        font-size: 1.1rem;
        padding: 0;
        z-index: 10;
        transition: var(--transition);
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
        margin-top: 15px;
    }

    .password-toggle:hover {
        color: var(--primary-color);
    }

    .password-input {
        padding-left: 50px !important;
        padding-right: 1rem !important;
    }
<link rel="stylesheet" href="~/fonts/icomoon/style.css">
<link rel="stylesheet" href="~/css/owl.carousel.min.css">
<link rel="icon" href="../Images/Small_logo.png" type="image/x-icon">
<title>تسجيل الدخول - مكتبة MindShelf الرقمية</title>
    .dark-mode-toggle {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        background: var(--card-bg);
        border: 2px solid var(--border-color);
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--shadow-md);
    }

    .dark-mode-toggle:hover {
        transform: scale(1.1);
        box-shadow: var(--shadow-lg);
    }

    .dark-mode-toggle i {
        font-size: 1.2rem;
        color: var(--text-primary);
    }

    /* Dark Mode Styles */
    body.dark-mode .login-form {
        background: var(--dark-card-bg);
        border-color: var(--dark-border-color);
    }

    body.dark-mode .form-control {
        background-color: var(--dark-input-bg);
        border-color: var(--dark-border-color);
        color: var(--dark-text-primary) !important;
    }

    body.dark-mode .form-control::placeholder {
        color: #a0a0a0 !important;
        opacity: 0.8;
    }

    body.dark-mode .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.2);
    }

    body.dark-mode .dark-mode-toggle {
        background: var(--dark-card-bg);
        border-color: var(--dark-border-color);
    }

    body.dark-mode .login-form h3,
    body.dark-mode .login-form p,
    body.dark-mode .form-group label,
    body.dark-mode .caption,
    body.dark-mode .text-muted {
        color: var(--dark-text-primary) !important;
    }

    body.dark-mode .password-toggle {
        color: #a0a0a0 !important;
    }

    body.dark-mode .password-toggle:hover {
        color: var(--primary-color) !important;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .login-form {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        .login-form h3 {
            font-size: 1.5rem;
        }

        .dark-mode-toggle {
            top: 15px;
            right: 15px;
            width: 45px;
            height: 45px;
        }
    }
</style>

<div class="login-container">
    <div class="login-form">
        <h3>تسجيل الدخول إلى <strong>MindShelf</strong></h3>
        <p>أدخل بياناتك أو استخدم Google لتسجيل الدخول</p>

        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label for="Email">البريد الإلكتروني</label>
                <input name="Email" class="form-control" placeholder="your-email@gmail.com" />
            </div>

        <div class="form-group">
                <label for="Password">كلمة المرور</label>
                <input type="password" name="Password" id="passwordInput" class="form-control password-input" placeholder="كلمة المرور" />
                <button type="button" class="password-toggle" id="passwordToggle">
                    <i class="fas fa-eye"></i>
                </button>
        </div>

            <div class="remember-me-container">
                <label class="control">
                    <input type="checkbox" name="RememberMe" />
                    <span class="caption">تذكرني</span>
                </label>
                <a asp-controller="Account" asp-action="ForgetPassword" class="forgot-pass">نسيت كلمة المرور؟</a>
            </div>

            <input type="submit" value="تسجيل الدخول" class="btn btn-chocolate">
        </form>

        <form asp-controller="Account" asp-action="ExternalLogin" method="post">
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="btn btn-google">
                <i class="fab fa-google"></i> تسجيل الدخول بـ Google
            </button>
        </form>

        <div class="text-danger mt-3">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>

        <div class="text-center mt-4">
            <p class="text-muted">ليس لديك حساب؟ <a href="@Url.Action("Register", "Account")" class="text-primary fw-bold">إنشاء حساب جديد</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Respect saved dark mode (no toggle on this page)
        document.addEventListener('DOMContentLoaded', function () {
            if (localStorage.getItem('darkMode') === 'true') {
                document.body.classList.add('dark-mode');
            }
        });

        // Password Toggle Functionality
        document.addEventListener('DOMContentLoaded', function () {
            const passwordToggle = document.getElementById('passwordToggle');
            const passwordInput = document.getElementById('passwordInput');
            
            if (passwordToggle && passwordInput) {
                passwordToggle.addEventListener('click', function () {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    
                    const icon = passwordToggle.querySelector('i');
                    if (icon) {
                        icon.className = type === 'password' ? 'fas fa-eye' : 'fas fa-eye-slash';
                    }
                });
            }
        });
    </script>
}

