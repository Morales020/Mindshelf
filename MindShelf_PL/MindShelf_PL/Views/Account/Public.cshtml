@model MindShelf_DAL.Models.User

@{
    ViewData["Title"] = "الملف العام";
    var displayName = ViewBag.DisplayName as string ?? Model.UserName;
    var shareAvatar = ViewBag.ShareAvatar as bool? ?? true;
    var shareAddress = ViewBag.ShareAddress as bool? ?? false;
    var sharePhone = ViewBag.SharePhone as bool? ?? false;
    var avatar = shareAvatar ? Model.ProfileImageUrl : null;
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body d-flex align-items-center">
            <div class="me-3">
                @if (!string.IsNullOrWhiteSpace(avatar))
                {
                    <img src="@avatar" alt="avatar" style="width:72px;height:72px;border-radius:50%;object-fit:cover;" onerror="this.replaceWith(document.createElement('i'))" />
                }
                else
                {
                    <i class="fas fa-user-circle" style="font-size:72px;"></i>
                }
            </div>
            <div>
                <h4 class="mb-1">@displayName</h4>
                <div class="text-muted">@Model.Email</div>
            </div>
        </div>
        <div class="card-body border-top">
            <dl class="row mb-0">
                @if (shareAddress && !string.IsNullOrWhiteSpace(Model.Address))
                {
                    <dt class="col-sm-3">العنوان</dt>
                    <dd class="col-sm-9">@Model.Address</dd>
                }
                @if (sharePhone && !string.IsNullOrWhiteSpace(Model.PhoneNumber))
                {
                    <dt class="col-sm-3">الهاتف</dt>
                    <dd class="col-sm-9">@Model.PhoneNumber</dd>
                }
                @if (!shareAddress && !sharePhone)
                {
                    <div class="col-12 text-muted">
                        <i class="fas fa-lock me-1"></i> المعلومات الشخصية محمية بالخصوصية
                    </div>
                }
            </dl>
        </div>
    </div>
</div>


